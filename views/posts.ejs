<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/header.ejs') %>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container my-5">
      <% if (posts.length) { %>
      <div>
        <h1 class="text-center">All Posts</h1>
        <p class="text-center">
          Manage your blog posts below. Edit or delete existing posts, or
          <a href="/add-post" class="btn btn-primary">add a new one</a>.
        </p>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% posts.forEach((post) => { %>
            <tr id="id_<%= post._id %>">
              <td><%= post.title %></td>
              <td><%= post.author %></td>
              <td>
                <a href="/posts/<%= post._id %>/edit" class="btn btn-warning btn-sm">
                  Edit
                </a>
              </td>
              <td>
                <button class="btn btn-danger btn-sm delete-btn" data-id="<%= post._id %>">
                  Delete
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <h1 class="text-center">There are no posts yet!</h1>
      <p class="text-center">
        Be the first to <a href="/add-post" class="btn btn-primary">add a new post</a>.
      </p>
      <% } %>
    </div>
    <script>
      document.addEventListener("click", (e) => {
        const deleteButton = e.target.closest(".delete-btn");
        if (deleteButton) {
          const id = deleteButton.dataset.id;
          if (confirm("Are you sure you want to delete this post?")) {
            fetch(`/posts/${id}`, {
              method: "DELETE",
            })
              .then(() => {
                // Видаляємо рядок зі списку без перезавантаження
                document.getElementById(`id_${id}`).remove();
              })
              .catch((err) => console.error("Error deleting post:", err));
          }
        }
      });
    </script>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
